generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model WAChat {
  id                      String                   @id
  bingConversations       BingConversation[]
  openRouterConversations OpenRouterConversation[]
  reminders               Reminder[]
  llmModel                String                   @default("bing")
}

model BingConversation {
  waChatId    String @id
  waMessageId String

  clientId        String
  jailbreakId     String?
  jailbroken      Boolean @default(true)
  parentMessageId String?
  invocationId    Int

  encryptedSignature String
  expiryTime         String

  waChat WAChat @relation(fields: [waChatId], references: [id])
}

model OpenRouterConversation {
  waChatId String @id
  memory   String
  waChat   WAChat @relation(fields: [waChatId], references: [id])
}

model Reminder {
  id       Int    @id @default(autoincrement())
  reminder String
  message  String
  waChatId String
  waChat   WAChat @relation(fields: [waChatId], references: [id])
}

model Cache {
  key   String @id
  value String
}
